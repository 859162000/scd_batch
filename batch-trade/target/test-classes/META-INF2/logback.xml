<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <contextListener class="ch.qos.logback.classic.jul.LevelChangePropagator">
        <resetJUL>true</resetJUL>
    </contextListener>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder charset="UTF-8">
            <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS} %5p %c:%L KEY:%X{_TRACE_KEY}] %m%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>
    <appender name="batch" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${catalina.base}/logs/fcore-batch.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${catalina.base}/logs/fcore-batch.%d{yyyy-MM-dd}.log</fileNamePattern>
            <MaxHistory>30</MaxHistory>
        </rollingPolicy>
        <encoder charset="UTF-8">
            <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS} %5p %c:%L KEY:%X{_TRACE_KEY}] %m%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>
    <logger name="org.springframework" level="info"/>
    <logger name="org.springframework.beans" level="info"/>

    <root level="debug">
        <appender-ref ref="console"/>
        <!--<appender-ref ref="batch"/>-->
    </root>
</configuration>