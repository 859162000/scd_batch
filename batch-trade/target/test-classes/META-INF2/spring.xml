<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-4.0.xsd 


	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-4.0.xsd">


    <context:property-placeholder location="classpath:META-INF2/dao.properties,
                                            classpath:META-INF2/global.properties,
                                            classpath:META-INF2/batch.config.properties"
                                  ignore-unresolvable="true"/>

 
    <import resource="classpath:META-INF2/spring/spring-dao.xml"/>
    <import resource="classpath:META-INF2/spring/spring-service.xml"/>
</beans>